<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:isScrollContainer="true"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
    >

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ff696969"
        android:text="@string/settings_category_general"
        android:id="@+id/textView_category_general"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/veryLightGray"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/view_divider_big_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:minHeight="48dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="0.97"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/settings_show_notification_title"
                android:id="@+id/textView_setting_notification_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_show_notification_summary"
                android:id="@+id/textView_setting_notification_summary"/>
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:id="@+id/checkBox_setting_notification"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ff696969"
        android:text="@string/settings_category_media_playback"
        android:id="@+id/textView_category_media"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/veryLightGray"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/view_divider_big_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/selector_basic"
        android:id="@+id/linearLayout_setAlarmVolume"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:minHeight="48dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/settings_alarm_sound_volume_title"
                android:id="@+id/textView_alarm_sound_volume_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_alarm_sound_volume_summary"
                android:id="@+id/textView_alarm_sound_volume_summary"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ff696969"
        android:text="@string/settings_category_alarm"
        android:id="@+id/textView_category_alarm"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/veryLightGray"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/view_divider_big_3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/selector_basic"
        android:id="@+id/linearLayout_setSnoozeTime"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:minHeight="48dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/settings_snooze_time_title"
                android:id="@+id/textView_snooze_time_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_snooze_time_summary"
                android:id="@+id/textView_snooze_time_summary"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/veryLightGray"
        android:id="@+id/view_divider_small_2"/>

</LinearLayout>